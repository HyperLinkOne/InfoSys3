{
    "name": "infosys3/app",
    "description": "PHP-Projekt mit MariaDB, Tests und PDF-Converter",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-gd": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-zip": "*",
        "phpmailer/phpmailer": "^6.10",
        "tecnickcom/tcpdf": "^6.10",
        "twig/twig": "^3.21",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=8",
        "phpcs": "phpcs src --standard=PSR12",
        "phpcbf": "phpcbf src --standard=PSR12"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
